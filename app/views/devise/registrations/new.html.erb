<%= render partial: "tweets/header2" %>

<h2 class="sign">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-group">
        <%= f.label :nickname %> 
        <%= f.text_field :nickname, autofocus: true, maxlength: "6" , class: "form-control col-5 form-resize", placeholder: "6文字以上" %>
      </div>
  
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control col-5 form-resize"%>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control col-5 form-resize", placeholder: "半角英数字"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control col-5 form-resize", placeholder: "半角英数字"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,class:"btn btn-primary"%>
  </div>
<% end %>

